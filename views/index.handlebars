<div class = "container">
<div class="row">
    <div class="eatBurger col-4">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </div>
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSox1UfNCT0bjMW96PlEb9RjLrlSOdJZGeh1X5lCD9amWgevyWW&s"
        alt="Burger Image" class="col-4">

<div class="devBurger col-4">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoure=1}}
    {{/if}}
    {{/each}}
</div>
</div>
<p align="center">Eat-Da-Burger</p>
<form class = "create-form" align="center">
    <div class = "form-group">
        <label for =  "bur"></label>
        <input type = "text" id = "bur" name = "burger_name">
    </div>
<button type="submit">Submit</button>
</form>
</div>
