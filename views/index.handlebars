<div class = "topContainer">
<ul class = "eatBurger">
{{#each burgers}}
    {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
    {{/unless}}
{{/each}}
</ul>

<ul class = "devBurger">
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoure=true}}
        {{/if}}
    {{/each}}
</ul>
</div>

<div class = "bottomContainer">
<form class = "create-form">
    <div class = "form-group">
        <label for =  "bur"></label>
        <input type = "text" id = "bur" name = "devoured">
    </div>
<button type="submit">Submit</button>
</form>
</div>