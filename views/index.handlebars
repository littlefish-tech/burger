<div class = "container">
<div class = "eatBurger">
{{#each burgers}}
    {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
    {{/unless}}
{{/each}}
</div>

<div class = "devBurger">
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoure=1}}
        {{/if}}
    {{/each}}
</div>
</div>

<div class = "container">
<form class = "create-form">
    <div class = "form-group">
        <label for =  "bur"></label>
        <input type = "text" id = "bur" name = "burger_name">
    </div>
<button type="submit">Submit</button>
</form>
</div>